<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppsList">

    <Button
        style="@style/ButtonStyle"
        android:text="@string/spotify_button"
        android:id="@+id/buttonSpotify"
        android:layout_below="@+id/textView"
        android:layout_marginTop="39dp"
        android:onClick="launchSpotify"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/scores_button"
        android:id="@+id/buttonScores"
        android:layout_below="@+id/buttonSpotify"
        android:onClick="launchScores"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/library_button"
        android:id="@+id/buttonLibrary"
        android:layout_below="@+id/buttonScores"
        android:layout_centerHorizontal="true"
        android:onClick="launchLibrary"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/bigger_button"
        android:id="@+id/buttonBigger"
        android:layout_below="@+id/buttonLibrary"
        android:onClick="launchBigger"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/reader_button"
        android:id="@+id/buttonReader"
        android:layout_below="@+id/buttonBigger"
        android:onClick="launchReader"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/vrum_button"
        android:id="@+id/buttonVrum"
        android:layout_below="@+id/buttonReader"
        android:onClick="launchVrum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/desc_text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
